{
  "name": "twitch-live",
  "fullName": "Twitch Live",
  "version": "3.0.0",
  "description": "Browser extension with notifications to check when does your favorite Twitch.tv channels are online.",
  "author": "Andrei Klymets <bipycxp@gmail.com> (http://github.com/bipycxp)",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "start": "webpack-dev-server --content-base ./app --inline --hot -d --host 0.0.0.0",
    "lint": "yarn lint:js && yarn lint:scss",
    "lint:js": "eslint app/js config webpack.config.js --ext js,jsx",
    "lint:scss": "stylelint 'app/**/*.scss' -s scss",
    "test": "cross-env NODE_ENV=test NODE_PATH=./app/js ava"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bipycxp/twitch-live.git"
  },
  "keywords": [
    "twitch",
    "live",
    "browser",
    "chrome",
    "extension"
  ],
  "bugs": {
    "url": "https://github.com/bipycxp/twitch-live/issues"
  },
  "homepage": "https://github.com/bipycxp/twitch-live",
  "dependencies": {
    "classnames": "^2.2.5",
    "keymirror": "^0.1.1",
    "material-ui": "^0.17.3",
    "moment": "^2.18.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.4",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.1",
    "redux-saga": "^0.14.4",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "ava": "^0.19.1",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-regenerator-runtime": "^6.5.0",
    "babel-runtime": "^6.23.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-config-standard-jsx": "^4.0.1",
    "eslint-config-standard-react": "^4.3.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-standard": "^3.0.1",
    "generate-json-webpack-plugin": "^0.2.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "postcss-loader": "^1.3.3",
    "sass-loader": "^6.0.3",
    "sinon": "^2.1.0",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-idiomatic-order": "^4.0.0",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2"
  },
  "ava": {
    "files": [
      "./test/"
    ],
    "verbose": true,
    "require": [
      "babel-register"
    ]
  }
}
